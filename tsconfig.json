{
  "compilerOptions": {
    "target": "ES2019",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "outDir": "dist/esm",
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*","dist"]
}
